<article class="book-group">
  <h3>{{title}}
    <span>({{filteredBooks.length}})</span>
  </h3>
  <div class="content">
    <ol>
      {{#each filteredBooks as |book|}}
      <li>
        {{link-to book.title 'book' book.id}}
        <a class="year" href="by_year.html">({{moment-format book.publicationDate 'YYYY'}})</a> -
        <a href="biography.html">{{book.author}}</a>
      </li>
      {{/each}}
    </ol>
  </div>
</article>
